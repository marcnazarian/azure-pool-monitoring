@model PoolMonitoringWebRole.ViewModels.PoolSensorDataViewModel

@{
    ViewBag.Title = "Pool sensor data";
}

<h2>@Model.PoolName</h2>

<hr/>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ph):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ph)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Temperature):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Temperature) °C
        </dd>

    </dl>
</div>

<hr/>

@if (Model.IsStatusOk)
{
    <div class="pool-status pool-status-ok">
        Status: OK
    </div>
}
else
{
    <div class="pool-status pool-status-warning">
        Warning:
        <ul class="pool-status-alerts">
            @foreach (string alertMessage in Model.AlertMessages)
            {
                <li>@alertMessage</li>
            }
        </ul>
    </div>
}